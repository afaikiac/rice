CONDABIN="$XDG_DATA_HOME/miniconda3/condabin/conda"

if [ -x "$CONDABIN" ]; then
  $CONDABIN "$@"
else
  echo "Error: Conda executable not found at $CONDABIN."
  exit 1
fi
