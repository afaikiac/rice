#!/usr/bin/env bash

set -euo pipefail

function print() {
	printf "%s\n" "$@" &>/dev/tty
}

function log() {
	printf "%s\n" "[$(basename "$0")] $1" &>/dev/tty
}

function die() {
	log "$@"
	exit 1
}

function is_timestamped() {
	[[ "$1" =~ \.[[:alnum:]]+$ ]] && [[ "$1" =~ .*\-[[:digit:]]{4}\-[[:digit:]]{2}\-[[:digit:]]{2}\-[[:digit:]]{6}(\.[[:alnum:]]+)$ ]]
}

function timestamp() {
	local extension="${1##*.}"
	local filename="${1%.*}"
	local timestamp="$(date --utc '+%Y-%m-%d-%H%M%S')"
	echo "${filename}-${timestamp}.${extension}"
}

function get_markdown_link() {
	local link=""
	if [[ "$1" =~ \.html$ ]]; then
		link="[](file://$1)"
	else
		link="[]($1)"
	fi
	echo "$link"
}

function move_to_src() {
	local file=$1
	local src=$2
	local root=$3

	local new_filename="$(basename "$file")"

	if ! is_timestamped "$file"; then
		new_filename="$(basename "$(timestamp "$file")")"
	fi

	mv "$file" "$src/$new_filename"

	local link="$(realpath -e --relative-base "$root" "$src/$new_filename")"
	local markdown_link="$(get_markdown_link "$link")"
	print "$markdown_link"
}

function main() {
	local root=$(realpath -e "$HOME/wiki")
	local src=$(realpath -e "$root/src")
	local default_file=$(realpath -e "$root/2023-02-13-115716.md")

	if [[ -n "${1:-}" ]]; then
		if [[ -f "$1" ]]; then
			move_to_src "$1" "$src" "$root"
		else
			die "$1 is not a file"
		fi
	else
		lvim "$default_file"
	fi
}

main "$@"
